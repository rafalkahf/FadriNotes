<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/AksenColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ActivityMain.NotesInput">

    <ImageButton
        android:id="@+id/backImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/leftarrow_button_foreground"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginTop="76dp"
        android:autoLink="web|phone|email"
        android:background="@android:color/transparent"
        android:fontFamily="@font/poppinsextra"
        android:hint="Title"
        android:inputType="textMultiLine"
        android:lines="1"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:textColor="@color/backGround"
        android:textColorHint="@color/backGround"
        android:textSize="28sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backImageButton"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/EditTextHeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginTop="3dp"
        android:paddingStart="10dp"
        android:autoLink="web|phone|email"
        android:background="@android:color/transparent"
        android:fontFamily="@font/mediumpoppitalic"
        android:hint="Headline"
        android:inputType="textMultiLine"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/backGround"
        android:textColorHint="@color/backGround"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/editTextTitle"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/editTextContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginTop="14dp"
        android:paddingStart="10dp"
        android:autoLink="web|phone|email"
        android:background="@android:color/transparent"
        android:fontFamily="@font/regpop"
        android:gravity="start"
        android:hint="Content"
        android:inputType="textMultiLine"
        android:lines="10"
        android:maxLines="30"
        android:textColor="@color/backGround"
        android:textColorHint="@color/backGround"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/EditTextHeadline"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/textViewReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambahkan Pengingat"
        android:textColor="@color/backGround"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.796"
        app:layout_constraintStart_toEndOf="@+id/backImageButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.406" />

</androidx.constraintlayout.widget.ConstraintLayout>